<?xml version="1.0" encoding="utf-8" ?>
<!-- A custom layout for the items within the ListView containing all of the started conversations -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:minWidth="25px"
  android:minHeight="25px"
  android:layout_width="match_parent"
  android:layout_height="match_parent" >
  <!-- Add a TextView for the Name(s) of who the User is conversing with -->
  <TextView
    android:text=""
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:maxLines="1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:maxWidth="200dp"
    android:id="@+id/GroupName" />
  <!-- Add a TextView for displaying the last message in the conversation -->
  <TextView
    android:text=""
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:maxLines="1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:maxWidth="300dp"
    android:layout_below="@id/GroupName"
    android:id="@+id/LastMessage" />
  <!-- Add A TextView for total number of messages with in the conversation -->
  <TextView
    android:text=""
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/GroupName"
    android:id="@+id/TotalMessages" />
  <!-- Add a TextView for the Time Stamp of the last message -->
  <TextView
    android:text=""
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:id="@+id/LastTimeStamp" />
  
</RelativeLayout>
