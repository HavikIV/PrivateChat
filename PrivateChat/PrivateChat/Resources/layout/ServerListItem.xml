<?xml version="1.0" encoding="utf-8" ?>
<!-- A custom layout for the items within the ListView containing all of the added servers -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:minWidth="25px"
  android:minHeight="25px"
  android:layout_width="match_parent"
  android:layout_height="match_parent" >
  <!-- Add a TextView for the name of the server -->
  <TextView 
    android:text=""
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/itemServerName"/>
  <!-- Add a TextView for the IP address of the server -->
  <TextView
    android:text=""
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/itemServerName"
    android:id="@+id/itemIPAddress"/>
  <!-- TextView for ":" between the IP address and port number -->
  <TextView
    android:text=":"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/itemServerName"
    android:layout_toRightOf="@id/itemIPAddress"
    android:id="@+id/itemTv"/>
  <!-- Add a TextView for the port number of the server -->
  <TextView
    android:text=""
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/itemServerName"
    android:layout_toRightOf="@id/itemTv"
    android:id="@+id/itemPortNumber"/>
</RelativeLayout>
